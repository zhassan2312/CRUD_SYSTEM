# Server Configuration
PORT=3000
NODE_ENV=development

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# JWT Secret (Generate a strong random secret for production)
JWT_SECRET=your_strong_jwt_secret_key_here_minimum_256_bits

# Google Cloud Storage
GCLOUD_STORAGE_BUCKET=your_gcloud_bucket

# Email Configuration (if using external email service)
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME=Your App Name

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Session Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
